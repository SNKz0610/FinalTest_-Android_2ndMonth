<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_mainactivity"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:background="#039BE5"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/linear_main_from"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/toolbar_mainactivity">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="From"
            android:textColor="#B7FF6A"
            android:textSize="20dp"
            android:padding="10dp"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:entries="@array/email_address" />
    </LinearLayout>

        <EditText
            android:id="@+id/edittext_main_to"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:hint="To"
            android:textColor="#ffffff"
            android:textColorHint="#B8FF6E"
            app:layout_constraintTop_toBottomOf="@id/linear_main_from"/>

    <EditText
        android:id="@+id/edittext_main_cc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:hint="CC"
        android:textColor="#ffffff"
        android:textColorHint="#B8FF6E"
        app:layout_constraintTop_toBottomOf="@id/edittext_main_to"/>

    <EditText
        android:id="@+id/edittext_main_bcc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:hint="Bcc"
        android:textColor="#ffffff"
        android:textColorHint="#B8FF6E"
        app:layout_constraintTop_toBottomOf="@id/edittext_main_cc"/>

    <EditText
        android:id="@+id/edittext_main_subject"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:hint="Subject"
        android:textColor="#ffffff"
        android:textColorHint="#B8FF6E"
        app:layout_constraintTop_toBottomOf="@id/edittext_main_bcc"/>

    <EditText
        android:gravity="start|top"
        android:id="@+id/edittext_main_compose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Compose email"
        android:lines="10"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#B8FF6E"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/edittext_main_subject"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>