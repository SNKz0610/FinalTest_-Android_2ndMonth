<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".FragmentReadingEmail">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_fragmentreadingemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#039BE5"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white">
        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:id="@+id/text_readingemail_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Header"
            android:textColor="#B7FF6A"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_fragmentreadingemail"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/image_readingemail_farvorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_star_border_24"
            app:layout_constraintTop_toBottomOf="@id/toolbar_fragmentreadingemail"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/text_readingemail_inbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#4A4A48"
            android:text="Hộp thư đến"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_readingemail_header"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_readingemail_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#40C0FF"
            app:layout_constraintTop_toBottomOf="@id/text_readingemail_inbox"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/text_readingemail_sender"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingBottom="5dp"
            android:background="#000000"
            android:textColor="#B7FF6A"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="sender"
            app:layout_constraintLeft_toRightOf="@id/image_readingemail_avatar"
            app:layout_constraintTop_toBottomOf="@id/text_readingemail_inbox"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/text_readingemail_tome"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#000000"
            android:textColor="#039BE5"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="tới tôi ▼"
            app:layout_constraintLeft_toRightOf="@id/image_readingemail_avatar"
            app:layout_constraintTop_toBottomOf="@id/text_readingemail_sender"
            android:paddingTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/text_readingemail_time"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#000000"
            android:textColor="#B7FF6A"
            android:textSize="12dp"
            android:text="time"
            android:paddingTop="3dp"
            app:layout_constraintLeft_toRightOf="@id/text_readingemail_sender"
            app:layout_constraintTop_toBottomOf="@id/text_readingemail_inbox"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>


        <ImageView
            android:id="@+id/image_readingemail_reply"
            android:layout_width="20dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/text_readingemail_inbox"
            app:layout_constraintRight_toLeftOf="@id/image_readingemail_menuchoice"
            android:src="@drawable/ic_baseline_reply_24"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/image_readingemail_menuchoice"
            android:layout_width="20dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/text_readingemail_inbox"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_baseline_menu_24"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/text_readingemail_contentmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="content"
            app:layout_constraintTop_toBottomOf="@id/image_readingemail_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>