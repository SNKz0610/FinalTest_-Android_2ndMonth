<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".MainActivity" android:tag="layout/activity_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_mainactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#039BE5"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>


        <TextView
            android:id="@+id/text_main_from"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:text="From"
            android:textColor="#B7FF6A"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_mainactivity"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_main_sender"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#000000"
            android:entries="@array/email_address"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/text_main_from"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_mainactivity" />


        <EditText
            android:id="@+id/edittext_main_to"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:hint="To"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#B8FF6E"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@id/edittext_main_cc"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/text_main_from"
            tools:layout_editor_absoluteX="10dp" />

        <EditText
            android:id="@+id/edittext_main_cc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="CC"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#B8FF6E"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/edittext_main_to"
            app:layout_constraintBottom_toTopOf="@id/edittext_main_bcc"/>

        <EditText
            android:id="@+id/edittext_main_bcc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Bcc"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#B8FF6E"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/edittext_main_cc"
            app:layout_constraintBottom_toTopOf="@+id/edittext_main_subject"/>

        <EditText
            android:id="@+id/edittext_main_subject"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Subject"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#B8FF6E"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/edittext_main_bcc"
            app:layout_constraintBottom_toTopOf="@id/edittext_main_compose"/>

        <EditText
            android:id="@+id/edittext_main_compose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:gravity="start|top"
            android:hint="Compose email"
            android:lines="10"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#B8FF6E"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/edittext_main_subject"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
         